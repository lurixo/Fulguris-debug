<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Minimum widths for SlidingPaneLayout panes. These determine the sliding threshold:
        Total threshold = preferences_header_width + preferences_detail_width (384 + 300 = 684dp)
        - Narrow screens (< 684dp): Panes slide/overlap using these fixed widths
        - Wide screens (≥ 684dp): Both panes visible side-by-side, these become minimum widths -->

    <dimen name="preferences_header_width">300dp</dimen>
    <dimen name="preferences_detail_width">384dp</dimen>

    <!--
    AndroidX defaults:
    <dimen name="preferences_header_width">384dp</dimen>
    <dimen name="preferences_detail_width">300dp</dimen>
    -->

    <!-- Layout weights for SlidingPaneLayout panes when both are visible (screens ≥ 684dp).
         Extra space beyond the minimum widths is distributed proportionally by weight.
         Example: If header weight = 1 and detail weight = 2, on a 1000dp screen:
           - Extra space: 1000 - 684 = 316dp
           - Header gets: 384 + (316 × 1/3) ≈ 489dp
           - Detail gets: 300 + (316 × 2/3) ≈ 511dp -->
    <integer name="preferences_header_pane_weight">1</integer>
    <integer name="preferences_detail_pane_weight">9</integer>

    <!--
    AndroidX defaults:
    <integer name="preferences_header_pane_weight">0</integer>
    <integer name="preferences_detail_pane_weight">1</integer>
    -->

    <!-- Pane animation duration in milliseconds -->
    <integer name="animation_time_medium">350</integer>

</resources>