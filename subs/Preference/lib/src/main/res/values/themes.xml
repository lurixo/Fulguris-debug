<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="Theme.Slions.Base" parent="Theme.Material3.DayNight.NoActionBar">

    </style>

    <!--  Define preference with larger fonts -->
    <style name="Theme.Slions.Preference.Large" parent="Theme.Slions.Preference">
        <!--
        Used in preference_material.xml layout for the title text
        See: https://android.googlesource.com/platform/frameworks/support/+/HEAD/preference/preference/src/main/res/layout/preference_material.xml
        Works from here but not from the parent theme for some reason
        -->
        <item name="android:textAppearanceListItem">@style/TextAppearance.Material3.TitleLarge</item>
        <!--
        Define summary text appearance
        -->
        <item name="android:textAppearanceListItemSecondary">@style/TextAppearance.Material3.BodyLarge</item>
    </style>


    <style name="Theme.Slions.Preference" parent="Theme.Slions.Base">

        <!-- This is specified by our theme below. But we could also specify thus if for some reason we did not want to use the whole theme -->
        <!--        <item name="sliderPreferenceStyle">@style/Preference.SliderPreference</item>-->

        <!--
            Needed for Android Studio preference preview to work, notably when using SliderPreference.
            However not strictly needed at runtime as PreferenceFragmentBase will apply that theme if none found
        -->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.Slions</item>

    </style>


<!--    Define styles for each of our custom preferences-->
    <style name="PreferenceThemeOverlay.Slions" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/Slions.Preference.Preference</item>
        <item name="preferenceCategoryStyle">@style/Slions.Preference.PreferenceCategory</item>
        <item name="sliderPreferenceStyle">@style/Slions.Preference.SliderPreference</item>
        <item name="switchPreferenceStyle">@style/Slions.Preference.SwitchPreference</item>
<!--        We hoped we could change the layout from all preference on the screen by setting this item, but it doesn't work.-->
<!--        <item name="preferenceScreenStyle">@style/Slions.Preference.PreferenceScreen</item>-->

<!--        Was also not working from here for some reason so we put it in the theme above-->
<!--        <item name="android:textAppearanceListItem">@style/TextAppearance.Material3.TitleLarge</item>-->

        <!-- Customize PreferenceCategory title appearance and color -->
        <item name="preferenceCategoryTitleTextAppearance">@style/TextAppearance.Slions.PreferenceCategory</item>
        <item name="preferenceCategoryTitleTextColor">?android:attr/colorPrimary</item>

    </style>

    <!-- Compact spacing variant - moderately reduced spacing -->
    <style name="PreferenceThemeOverlay.Slions.Compact" parent="PreferenceThemeOverlay.Slions">
        <!-- Reduce minimum height from default 48dp to 36dp -->
        <item name="android:listPreferredItemHeightSmall">0dp</item>
        <!-- Reduce horizontal padding from default 16dp to 12dp -->
<!--        <item name="android:listPreferredItemPaddingLeft">12dp</item>-->
<!--        <item name="android:listPreferredItemPaddingStart">12dp</item>-->
<!--        <item name="android:listPreferredItemPaddingRight">12dp</item>-->
<!--        <item name="android:listPreferredItemPaddingEnd">12dp</item>-->
        <!-- Set vertical padding for preference content (overrides hardcoded 16dp) -->
        <item name="preferencePaddingVertical">6dp</item>
<!--        <item name="preferenceCategoryPaddingVertical">6dp</item>-->
    </style>

    <!-- Dense spacing variant - significantly reduced spacing for information-dense layouts -->
    <style name="PreferenceThemeOverlay.Slions.Dense" parent="PreferenceThemeOverlay.Slions">
        <!-- Reduce minimum height to 24dp for ultra-compact display -->
        <item name="android:listPreferredItemHeightSmall">0dp</item>
        <!-- Reduce horizontal padding to 8dp -->
<!--        <item name="android:listPreferredItemPaddingLeft">8dp</item>-->
<!--        <item name="android:listPreferredItemPaddingStart">8dp</item>-->
<!--        <item name="android:listPreferredItemPaddingRight">8dp</item>-->
<!--        <item name="android:listPreferredItemPaddingEnd">8dp</item>-->
        <!-- Set vertical padding for preference content (overrides hardcoded 16dp) -->
        <item name="preferencePaddingVertical">0dp</item>
<!--        <item name="preferenceCategoryPaddingVertical">0dp</item>-->
    </style>

</resources>