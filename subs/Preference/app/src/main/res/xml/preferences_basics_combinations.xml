<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:a="http://schemas.android.com/apk/res-auto">

    <!-- =============== TITLE & SUMMARY COMBINATIONS =============== -->

    <x.PreferenceCategory
        a:title="Title &amp; Summary Combinations"
        a:iconSpaceReserved="false">

        <x.Preference
            a:key="both_title_summary"
            a:title="With Both Title and Summary"
            a:summary="This preference has both a title and a summary text"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_only"
            a:title="Title Only - No Summary"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="summary_only"
            a:summary="Summary Only - No Title"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_multiline_no_summary"
            a:title="Multi-line Title without Summary: This is a long title that spans multiple lines to demonstrate how titles work when there is no summary text"
            a:titleMaxLines="3"
            a:titleEllipsize="end"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="summary_multiline_no_title"
            a:summary="Multi-line Summary without Title: This is a long summary that spans multiple lines to demonstrate how summaries work when there is no title text provided"
            a:singleLineSummary="false"
            a:summaryMaxLines="3"
            a:summaryEllipsize="end"
            a:iconSpaceReserved="false" />

        <x.Preference
            a:key="title_with_icon_no_summary"
            a:title="Title with Icon, No Summary"
            a:icon="@drawable/ic_check_circle_outline" />

        <x.Preference
            a:key="summary_with_icon_no_title"
            a:summary="Summary with Icon, No Title"
            a:icon="@drawable/ic_sliders_outline" />

    </x.PreferenceCategory>

</PreferenceScreen>

